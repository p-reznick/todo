<h1>All Todos</h1>

<ul>
  <% @todos.each do |todo| %>
    <li>
      <h3><%= todo.title %></h3>
      <p><%= todo.due_date %></p>
      <%= link_to "[Edit]", edit_todo_path(todo) %>
      <%= link_to "[Show]", todo_path(todo) %>
      <%= link_to "[Delete]", todo_path(todo), method: :delete %>
      <hr/>
    </li>
  <% end %>
</ul>

<br/>
<%= link_to "Create todo", new_todo_path %>
